<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="415dp"
        android:layout_height="726dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDonuts"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@drawable/ab_mauri_donut_recipe" />

            <TextView
                android:id="@+id/txtGlazedDonuts"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/donuts"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtDonuts"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="16"
                android:hint="Item Quantity eg: 1, 2, 5"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgBomboloni"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bomboloni" />

            <TextView
                android:id="@+id/txtBomboloni"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/bomboloni"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtBomboloni"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="16"
                android:hint="Item Quantity eg: 1, 2, 5"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="fnCalculate"
                android:text="calculate" />

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginTop="24dp"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>